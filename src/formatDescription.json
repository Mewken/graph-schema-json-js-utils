{
    "$title": "Description schema",
    "type": "object",
    "properties": {
        "graphDescription": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "nodeSpecs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Node"
                    }
                },
                "relationshipSpecs": {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/Relationship"
                  }
                }
                
            },
            "additionalProperties": false,
            "required": ["nodeSpecs"]
        }
    },
    "additionalProperties": false,
    "$defs": {
      "Node": {
        "type": "object",
        "properties": {
          "ref": {
            "type": "string"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "properties": {
            "type": "object",
            "properties": {
              "properties": {
                "type": "object",
                "patternProperties": {
                  "^.+$": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "enum": [
                          "string",
                          "boolean",
                          "array"
                        ]
                      }
                    },
                    "additionalProperties": false
                  }
                }
              }
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "ref",
          "labels",
          "properties"
        ]
      },
        "Relationship": {
            "type": "object",
            "properties": {
              "ref": {
                "type": "string"
              },
              "refType": {
                "type": "string"
              },
              "fromNodeRef": {
                "type": "string"
              },
                "toNodeRef" : {
                "type" : "string"
              }
            },
            "additionalProperties": false,
            "required": ["ref", "refType", "fromNodeRef", "toNodeRef", "properties"]
        }
    }
}